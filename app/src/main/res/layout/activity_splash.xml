<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myBG"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aris.kots.trackmyday.SplashActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/run"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="2dp"
            android:src="@mipmap/ic_directions_run_white_48dp" />

        <ImageView
            android:id="@+id/car"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/run"
            android:src="@mipmap/ic_directions_car_white_48dp" />

        <ImageView
            android:id="@+id/bike"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/car"
            android:src="@mipmap/ic_directions_bike_white_48dp" />

        <ImageView
            android:id="@+id/train"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/run"
            android:layout_marginRight="2dp"

            android:src="@mipmap/ic_train_white_48dp" />

        <ImageView
            android:id="@+id/walk"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/car"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/train"
            android:src="@mipmap/ic_directions_walk_white_48dp" />

        <ImageView
            android:id="@+id/t"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/bike"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/walk"
            android:src="@mipmap/ic_directions_bus_white_48dp" />
    </RelativeLayout>

</RelativeLayout>
